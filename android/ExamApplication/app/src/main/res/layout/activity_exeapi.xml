<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exeapi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.takeh.examapplication.Exeapi">

    <TextView
        android:text="開始時刻："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="50dp"
        android:layout_marginTop="78dp"
        android:id="@+id/txtView_start" />

    <Button
        android:text="開始"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:id="@+id/button2"

        android:layout_alignParentStart="true"
        android:layout_marginTop="273dp" />

    <TextView
        android:text="終了時刻："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView_end"
        android:layout_alignParentTop="true"

        android:layout_marginTop="108dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtView_start"
        android:layout_toEndOf="@+id/txtView_start"
        android:id="@+id/textView4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtView_end"
        android:layout_alignEnd="@+id/textView4"
        android:id="@+id/textView5" />

</RelativeLayout>
